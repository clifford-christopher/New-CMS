# AI-Powered News CMS - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git

# ============================================================================
# BACKEND CONFIGURATION
# ============================================================================

# MongoDB Configuration - Existing Database
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB_NAME=mmfrontend
# Note: mmfrontend database contains:
# - news_triggers (684,919 documents)
# - trigger_prompts (54 documents)
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority

# AWS Configuration
AWS_REGION=us-east-1
AWS_SECRETS_MANAGER_PREFIX=news-cms/

# AWS Credentials (for local development)
# In production, use IAM roles instead
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here

# ============================================================================
# LLM API KEYS (Development Only)
# In production, these are loaded from AWS Secrets Manager
# ============================================================================

# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google AI API Key
GOOGLE_API_KEY=your-google-api-key-here

# ============================================================================
# AUTHENTICATION (To be configured in Epic 1)
# ============================================================================

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret-key-here

# Session Configuration
SESSION_EXPIRE_MINUTES=1440

# ============================================================================
# DEVELOPMENT FLAGS
# ============================================================================

# Use mock data instead of real API calls (useful for development)
USE_MOCK_DATA=false

# Enable debug logging
DEBUG=false

# Environment (development, staging, production)
ENVIRONMENT=development

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================

# Backend API URL (used by Next.js frontend)
NEXT_PUBLIC_API_URL=http://localhost:8000

# ============================================================================
# OPTIONAL: FINANCIAL DATA API KEYS (Epic 2)
# To be added when providers are identified
# ============================================================================

# Example placeholders:
# EARNINGS_API_KEY=your-earnings-api-key-here
# PRICE_DATA_API_KEY=your-price-data-api-key-here

# ============================================================================
# LOGGING & MONITORING
# ============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# CloudWatch Log Group (for production)
# CLOUDWATCH_LOG_GROUP=/aws/news-cms/backend

# ============================================================================
# RATE LIMITING & COST CONTROLS
# ============================================================================

# LLM cost limits (USD per month)
LLM_COST_LIMIT_MONTHLY=500.00

# Request rate limits (requests per minute)
API_RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# NOTES
# ============================================================================

# 1. SECURITY: Never commit .env to version control
# 2. AWS Secrets Manager: In production, LLM keys are loaded from AWS Secrets Manager
# 3. Local Development: You can use these environment variables for local testing
# 4. Generate JWT Secret: openssl rand -hex 32
# 5. For production deployment, set these in AWS Systems Manager Parameter Store or Secrets Manager
